{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionApp_name": {
            "defaultValue": "anthmaFunctions",
            "type": "String"
        },
        "serverfarms_ASP_Demo_9eea_externalid": {
            "defaultValue": "/subscriptions/4b395f5d-d1ab-4bae-808d-a4398c9c61c5/resourceGroups/Demo/providers/Microsoft.Web/serverfarms/ASP-Demo-9eea",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('functionApp_name')]",
            "location": "East US 2",
            "kind": "functionapp,linux",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "anthmafunctions.azurewebsites.net",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "anthmafunctions.scm.azurewebsites.net",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[parameters('serverfarms_ASP_Demo_9eea_externalid')]",
                "reserved": true,
                "isXenon": false,
                "hyperV": false,
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": false,
                "clientCertEnabled": false,
                "hostNamesDisabled": false,
                "containerSize": 1536,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": false,
                "redundancyMode": "None"
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('functionApp_name'), '/web')]",
            "location": "East US 2",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('functionApp_name'))]"
            ],
            "properties": {
                "numberOfWorkers": 1,
                "defaultDocuments": [
                    "Default.htm",
                    "Default.html",
                    "Default.asp",
                    "index.htm",
                    "index.html",
                    "iisstart.htm",
                    "default.aspx",
                    "index.php"
                ],
                "netFrameworkVersion": "v4.0",
                "linuxFxVersion": "PYTHON|3.7",
                "requestTracingEnabled": false,
                "remoteDebuggingEnabled": false,
                "remoteDebuggingVersion": "VS2019",
                "httpLoggingEnabled": false,
                "logsDirectorySizeLimit": 35,
                "detailedErrorLoggingEnabled": false,
                "publishingUsername": "$anthmaFunctions",
                "scmType": "None",
                "use32BitWorkerProcess": true,
                "webSocketsEnabled": false,
                "alwaysOn": false,
                "managedPipelineMode": "Integrated",
                "virtualApplications": [
                    {
                        "virtualPath": "/",
                        "physicalPath": "site\\wwwroot",
                        "preloadEnabled": false
                    }
                ],
                "loadBalancing": "LeastRequests",
                "experiments": {
                    "rampUpRules": []
                },
                "autoHealEnabled": false,
                "cors": {
                    "allowedOrigins": [
                        "https://functions.azure.com",
                        "https://functions-staging.azure.com",
                        "https://functions-next.azure.com"
                    ],
                    "supportCredentials": false
                },
                "localMySqlEnabled": false,
                "managedServiceIdentityId": 1544,
                "ipSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictions": [
                    {
                        "ipAddress": "Any",
                        "action": "Allow",
                        "priority": 1,
                        "name": "Allow all",
                        "description": "Allow all access"
                    }
                ],
                "scmIpSecurityRestrictionsUseMain": false,
                "http20Enabled": false,
                "minTlsVersion": "1.2",
                "ftpsState": "AllAllowed",
                "reservedInstanceCount": 0
            }
        },
        {
            "type": "Microsoft.Web/sites/functions",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('functionApp_name'), '/amlComputeInstanceShutdown')]",
            "location": "East US 2",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('functionApp_name'))]"
            ],
            "properties": {
                "script_root_path_href": "https://anthmafunctions.azurewebsites.net/admin/vfs/home/site/wwwroot/amlComputeInstanceShutdown/",
                "script_href": "https://anthmafunctions.azurewebsites.net/admin/vfs/home/site/wwwroot/amlComputeInstanceShutdown/__init__.py",
                "config_href": "https://anthmafunctions.azurewebsites.net/admin/vfs/home/site/wwwroot/amlComputeInstanceShutdown/function.json",
                "href": "https://anthmafunctions.azurewebsites.net/admin/functions/amlComputeInstanceShutdown",
                "config": {}
            }
        },
        {
            "type": "Microsoft.Web/sites/functions",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('functionApp_name'), '/amlComputeShutdown')]",
            "location": "East US 2",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('functionApp_name'))]"
            ],
            "properties": {
                "script_root_path_href": "https://anthmafunctions.azurewebsites.net/admin/vfs/home/site/wwwroot/amlComputeShutdown/",
                "script_href": "https://anthmafunctions.azurewebsites.net/admin/vfs/home/site/wwwroot/amlComputeShutdown/__init__.py",
                "config_href": "https://anthmafunctions.azurewebsites.net/admin/vfs/home/site/wwwroot/amlComputeShutdown/function.json",
                "href": "https://anthmafunctions.azurewebsites.net/admin/functions/amlComputeShutdown",
                "config": {}
            }
        },
        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('functionApp_name'), '/', parameters('functionApp_name'), '.azurewebsites.net')]",
            "location": "East US 2",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('functionApp_name'))]"
            ],
            "properties": {
                "siteName": "anthmaFunctions",
                "hostNameType": "Verified"
            }
        }
    ]
}